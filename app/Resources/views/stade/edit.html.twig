<form action="{{ path('stade_edit', { 'id':stade.id }) }}" method="post" {{ form_enctype(form) }}
      class="form-horizontal" role="form">
    {{ form_errors(form) }}
    <div class="form-group">
        <label for="nom" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.nom ,"Nom") }}
        </label>
        <div class="col-sm-9">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control' }}) }}

        </div>
        <div class="col-sm-12">
            {{ form_errors(form.nom) }}
        </div>

    </div>

    <div class="form-group">
        <label for="lieu" class="control-label col-sm-3 " style="text-align: left;">
            {{ form_label(form.lieu ,"Lieu") }}
        </label>
        <div class="col-sm-9">
            {{ form_widget(form.lieu, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.lieu) }}
        </div>

    </div>

    <div class="form-group">
        <label for="description" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.description ,"Description") }}
        </label>
        <div class="col-sm-9">
            {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.description) }}
        </div>

    </div>

    <div class="form-group">
        <label for="image" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.image ,"Image") }}
        </label>
        <div class="col-sm-9">
            {{ form_widget(form.image) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.image) }}
        </div>
    </div>

    <input type="submit" value="Modifier" class="btn btn-primary"/>
    {{ form_rest(form) }}

</form>
