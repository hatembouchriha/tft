{% extends 'base.html.twig' %}

{% block body %}
    <h1>Match</h1>

    <table>
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ match.type }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ match.score }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ match.date }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('match_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('match_edit', { 'id': match.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
