{% extends '::adminlayout.html.twig' %}

{% block menu %}
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">MAIN NAVIGATION</li>
                <li>
                    <a href="{{ path('compterendumatch_index') }}">
                        <i class="fa fa-th"></i> <span>Compte Rendu</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('participationformation_index') }}">
                        <i class="fa fa-th"></i> <span>Formation</span>
                    </a>
                </li>

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
{% endblock %}

{% block body %}
    {% set IDs = {} %}
<section class="content-header">
    <h1>Formations</h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-body">
                    <table id="tableResponsable" datatable="" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Date début</th>
                            <th>Date fin</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for formation in formations %}
                            <tr>
                                <td>
                                    {{ formation.dateDebut }}
                                </td>
                                <td>
                                    {{ formation.dateFin }}
                                </td>
                                <td>{{ formation.description }}</td>
                                <td>
                                    <a type="button" class="btn btn-info" data-toggle="modal"
                                       data-target="#confirmModal{{ formation.id }}"
                                       href="#confirmModal{{ formation.id }}">Participer
                                    </a>
                                    <div class="modal fade" id="confirmModal{{ formation.id }}" role="dialog">
                                        <div class="modal-dialog modal-sm ">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title" >Confirmation</h4>
                                                </div>
                                                <div class="modal-body" style="background-color: #fff">
                                                    <p>Voulez vous participer à cette formation</p>
                                                </div>
                                                <div class="panel-footer">
                                                    <a href="{{ path('participationformation_new', { 'id':formation.id }) }}"
                                                       class="btn btn-info">Participer</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}