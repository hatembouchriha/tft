<form action="{{ path('media_edit', {'id':medium.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
    {{ form_errors(form) }}
    <div class="form-group">
        <label for="titre" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.titre ,"Titre") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.titre, {'attr': {'class': 'form-control' }}) }}

        </div>
        <div class="col-sm-12">
            {{ form_errors(form.titre) }}
        </div>

    </div>

    <div class="form-group">
        <label for="genre" class="control-label col-sm-3 " style="text-align: left;">
            {{ form_label(form.genre ,"Genre") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.genre, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.genre) }}
        </div>

    </div>

    <div class="form-group">
        <label for="source" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.source ,"Lien") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.source, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.source) }}
        </div>

    </div>

    <input type="submit" value="Modifier" class="btn btn-primary"/>
    {{ form_rest(form) }}


</form>