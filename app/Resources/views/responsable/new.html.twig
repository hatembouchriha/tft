<form action="{{ path('responsable_new') }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
    {{ form_errors(form) }}
    <div class="form-group">
        <label for="nom" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.nom ,"Nom") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control' }}) }}

        </div>
        <div class="col-sm-12">
            {{ form_errors(form.nom) }}
        </div>

    </div>

    <div class="form-group">
        <label for="prenom" class="control-label col-sm-3 " style="text-align: left;">
            {{ form_label(form.prenom ,"Prenom") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.prenom) }}
        </div>

    </div>

    <div class="form-group">
        <label for="username" class="control-label col-sm-3 " style="text-align: left;">
            {{ form_label(form.username ,"Username") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.username, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.username) }}
        </div>

    </div>


    <div class="form-group">
        <label for="login" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.email ,"Login") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.email) }}
        </div>

    </div>

    <div class="form-group">
        <label for="password" class="control-label col-sm-3" style="text-align: left;">
            {{ form_label(form.password ,"Mot de passe") }}
        </label>
        <div class="col-sm-6">
            {{ form_widget(form.password, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.password) }}
        </div>
    </div>

    <input type="submit" value="Ajouter" class="btn btn-primary"/>
    {{ form_rest(form) }}


</form>