<form class="form-horizontal" role="form" {{ form_enctype(form) }} method="post" action="{{ path('club_new') }}">
    {{ form_errors(form) }}
    <div class="form-group">
        <label class="control-label col-sm-3" style="text-align: left;">{{ form_label(form.nom,'Nom') }}</label>
        <div class="col-sm-6">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.nom) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" style="text-align: left;">{{ form_label(form.logo,'Logo') }}</label>
        <div class="col-sm-6">
            {{ form_widget(form.logo) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.logo) }}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" style="text-align: left;">{{ form_label(form.nom,'Adresse') }}</label>
        <div class="col-sm-6">
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.adresse) }}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" style="text-align: left;">{{ form_label(form.dateFondation,'Date fondation') }}</label>
        <div class="col-sm-6">
            {{ form_widget(form.dateFondation, {'attr': {'class': 'form-control' }}) }}
        </div>
        <div class="col-sm-12">
            {{ form_errors(form.dateFondation) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary " type="submit" >Ajouter</button>

</form>