{% extends '::adminlayout.html.twig' %}

{% block menu %}
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">MAIN NAVIGATION</li>
                <li>
                    <a href="{{ path('compterendutest_index') }}">
                        <i class="fa fa-th"></i> <span>Compte Rendu</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('invitation_index') }}">
                        <i class="fa fa-th"></i> <span>Invitation</span>
                    </a>
                </li>

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
{% endblock %}

{% block body %}
    {% set IDs = {} %}
    <section class="content-header">
        <h1>Invitations test anti dopage</h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><a data-toggle="modal" href="#addModal" data-target="#addModal"
                                                 class="btn btn-success">
                                <i class="fa fa-plus">Ajouter</i></a></h3>
                        <div id="addModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Envoyer invitation test anti dopage</h4>
                                    </div>
                                    <div class="modal-body">
                                        {{ render(path("invitation_new")) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="tableResponsable" datatable="" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Dateinvitation</th>
                                <th>Nom</th>
                                <th>Pr√©nom</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for invitation in invitations %}
                                <tr>
                                    <td>
                                        <a href="{{ path('invitation_show', { 'id': invitation.id }) }}">{{ invitation.dateInvitation }}</a>
                                    </td>
                                    <td>{{ invitation.idJoueur.nom }}</td>
                                    <td>{{ invitation.idJoueur.prenom }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
