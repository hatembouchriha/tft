{% extends '::adminlayout.html.twig' %}

{% block menu %}
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">MAIN NAVIGATION</li>
                <li>
                    <a href="{{ path('compterendumatch_index') }}">
                        <i class="fa fa-th"></i> <span>Compte Rendu</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('participationformation_index') }}">
                        <i class="fa fa-th"></i> <span>Formation</span>
                    </a>
                </li>

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Comptes rendus</h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><a data-toggle="modal" href="#addModal" data-target="#addModal"
                                                 class="btn btn-success">
                                <i class="fa fa-plus">Ajouter</i></a></h3>
                        <div id="addModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Compte rendu creation</h4>
                                    </div>
                                    <div class="modal-body">
                                        {{ render(path("compterendumatch_new")) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="tableResponsable" datatable="" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Description</th>
                                <th>Id</th>
                                <th style="width: 70px">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for compteRenduMatch in compteRenduMatches %}
                                <tr>
                                    <td>
                                        <a href="{{ path('compterendumatch_show', { 'id': compteRenduMatch.id }) }}">
                                            {{ compteRenduMatch.description }}</a>
                                    </td>
                                    <td>{{ compteRenduMatch.id }}</td>
                                    <td>
                                        <a data-toggle="modal" href="#editModal{{ compteRenduMatch.id }}"
                                           data-target="#editModal{{ compteRenduMatch.id }}"
                                           class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                        <div id="editModal{{ compteRenduMatch.id }}" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close"
                                                                data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Compe rendu edit</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        {{ render(path("compterendumatch_edit", { 'id': compteRenduMatch.id })) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
